<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jm_ab.variation_parameter">b</parameter>
        <parameter key="jm_ab.template.class">Jm\ABBundle\Entity\Template</parameter>
        <parameter key="jm_ab.templatemanager.class">Jm\ABBundle\Entity\TemplateManager</parameter>
        <parameter key="jm_ab.loader.class">Twig_Loader_Chain</parameter>
        <parameter key="twig.loader.filesystem.class">Symfony\Bundle\TwigBundle\Loader\FilesystemLoader</parameter>
    </parameters>

    <services>
        <service id="jm_ab.template_manager" class="%jm_ab.templatemanager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%jm_ab.template.class%</argument>
            <argument type="service" id="service_container" />
        </service>

        <service id="jm_ab.twig_filesystem_loader" class="%twig.loader.filesystem.class%">
            <argument type="service" id="templating.locator" />
            <argument type="service" id="templating.name_parser" />
        </service>

        <service id="jm_ab.template_loader" class="Jm\ABBundle\Twig\TemplateLoader">
            <argument type="service" id="jm_ab.template_manager" />
            <argument>%jm_ab.variation_parameter%</argument>
        </service>

        <service id="jm_ab.twig_loader" class="%jm_ab.loader.class%">
            <argument type="collection">
                <argument type="service" id="jm_ab.template_loader" />
                <argument type="service" id="jm_ab.twig_filesystem_loader" />
            </argument>
        </service>

        <service id="jm_ab.template_admin" class="Jm\ABBundle\Admin\TemplateAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Site" label="Templates" />
            <argument />
            <argument>Jm\ABBundle\Entity\Template</argument>
            <argument>JmABBundle:TemplateAdmin</argument>
        </service>
    </services>
</container>
